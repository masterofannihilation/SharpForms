@page "/forms/create"

<PageTitle>New Form</PageTitle>

<div class="container d-flex justify-content-center" style="margin-top: 20px;">
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h3 class="card-title text-center">Create New Form</h3>

            <EditForm Model="FormDetailModel" OnValidSubmit="SubmitAsync">
                <DataAnnotationsValidator />
                <ValidationSummary />

                @if (_errorMessage != null)
                {
                    <div class="alert alert-danger">
                        @_errorMessage
                    </div>
                }

                <div class="mb-3">
                    <label for="Name" class="form-label">Form Name</label>
                    <InputText id="Name" class="form-control" @bind-Value="FormDetailModel.Name" />
                </div>

                <div class="mb-3">
                    <label for="OpenSince" class="form-label">Open Since</label>
                    <InputDate id="OpenSince" class="form-control" @bind-Value="FormDetailModel.OpenSince" />
                    <ValidationMessage For="@(() => FormDetailModel.OpenSince)" />
                </div>

                <div class="mb-3">
                    <label for="OpenUntil" class="form-label">Open Until</label>
                    <InputDate id="OpenUntil" class="form-control" @bind-Value="FormDetailModel.OpenUntil" />
                    <ValidationMessage For="@(() => FormDetailModel.OpenUntil)" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Create Form</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
