@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inherits LayoutComponentBase


<div class="topmainlayout">
    <div class="left-group">
        <div class="navbar-brand">SharpForms</div>
        <nav class="nav-links">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
            <NavLink class="nav-link" href="forms">Forms</NavLink>
            <NavLink class="nav-link" href="users">Users</NavLink>
        </nav>
    </div>
    <div class="user-controls">
        <AuthorizeView>
            <Authorized>
                <span>@DisplayName</span>
                <button class="nav-link btn btn-link" @onclick="BeginLogOut">Log out</button>
            </Authorized>
            <NotAuthorized>
                <a href="authentication/login" class="btn btn-link login-btn">Log in</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<main>
    <article class="content px-4">
        @Body
    </article>
</main>
